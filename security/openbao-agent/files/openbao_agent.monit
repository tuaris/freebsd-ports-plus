# Monit configuration for OpenBao Agent
# Install to: /usr/local/etc/monit.d/openbao_agent.monit

check process openbao_agent with pidfile /var/run/bao/openbao_agent.pid
    start program = "/usr/sbin/service openbao_agent start"
    stop  program = "/usr/sbin/service openbao_agent stop"
    if failed host 127.0.0.1 port 8100 type tcp then restart
    if 5 restarts within 5 cycles then alert
